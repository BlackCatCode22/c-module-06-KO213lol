{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug ZookeeperChallenge",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ZookeeperChallenge.exe", // Path to your compiled executable
            "args": ["animal.txt", "zooPopulation.txt"], // Arguments for your program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Current working directory
            "environment": [],
            "externalConsole": true, // Use an external console for input/output
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw64/bin/gdb.exe", // Path to your debugger (adjust if needed)
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}